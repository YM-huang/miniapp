.main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 702rpx;
  height: 620rpx;
  background: #ffffff;
  border-radius: 16rpx;
}
.main .main-top {
  width: 100%;
  height: 482rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.main .main-top .main-top-image {
  margin-top: 75rpx;
  height: 409rpx;
  width: 484rpx;
}
.main .main-top .main-top-line {
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  background: #e5e5e5;
}
.main .main-bottom {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 136rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0.45rpx;
  text-align: center;
}
