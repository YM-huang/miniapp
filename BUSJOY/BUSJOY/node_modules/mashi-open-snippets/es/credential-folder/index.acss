.main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 702rpx;
  height: 619rpx;
  background: #ffffff;
  border-radius: 16rpx;
}
.main .main-top {
  width: 702rpx;
  height: 483rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.main .main-top .main-top-image {
  width: 598rpx;
  height: 327rpx;
  margin-top: 62rpx;
}
.main .main-top .main-top-line {
  margin-top: 115rpx;
  height: 4rpx;
  width: 100%;
  transform: scale(1, 0.5);
  background: #D8D8D8;
}
.main .main-bottom {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 136rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0.45rpx;
  text-align: center;
}
