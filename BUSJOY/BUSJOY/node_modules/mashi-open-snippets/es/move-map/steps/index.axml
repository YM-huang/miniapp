<view class="atd-hor-steps {{className}}" a:if="{{direction == 'horizontal'}}">
  <view class="atd-hor-step" a:for="{{items['items'] }}" style="{{width: 100 / (items['items'].length - 1) + '%'}}">
    <view class="atd-hor-step-line {{index < activeIndex - 1 ? 'is-active' : ''}} {{index >= items['items'].length - 1 ? 'is-last' : ''}}">
      <view class="atd-hor-step-icon {{index <= activeIndex - 1 ? 'is-active' : ''}}"></view>
    </view>
    <view  onTap="test" class="atd-hor-step-text">
      <view class="atd-hor-step-title">
        <text>{{item.title}}</text>
        <view class="atd-hor-step-description">
        <text>{{item.operate}}</text>
      </view>
      </view>  
    </view>
  </view>
</view>
<view class="atd-vertical-steps {{className}}" a:if="{{direction == 'vertical'}}">
  <view class="atd-vertical-step" a:for="{{items['items'] }}">
    <view class="atd-vertical-step-left">
      <view 
        class="atd-vertical-step-line atd-vertical-step-line-top {{index < activeIndex ? 'is-active' : ''}}"
        a:if="{{index < items['items'] .length - 1}}"
      ></view>
      <view 
        class="atd-vertical-step-line atd-vertical-step-line-bottom {{index < activeIndex - 1 ? 'is-active' : ''}}"
        a:if="{{index < items['items'] .length - 1}}"
      ></view>
      <view class="atd-vertical-step-icon is-active" >
      </view>
    </view>
    <view class="atd-vertical-step-right"  data-chooseData="{{item}}">
      <view  class="atd-vertical-step-title  {{item.title == items.discounts[0].endPlace ? 'is-fail' : ''}}">
        <view onTap="chooseName"  data-chooseData="{{item}}" class="atd-vertical-step-name {{ item.isActive ? 'is-active' : ''}}" >
          <text>{{item.title}}</text>
        </view>
        <text class="atd-vertical-step-isfar" a:if="{{item.isFar== 1}}">离我最近</text>
        <view  class="atd-vertical-step-description"  onTap="choose" data-chooseData="{{item}}">
          <text>导航</text>
          <view class="atd-list-arrow" />
        </view>
        <audio id="{{item.key}}" src="{{item.voice}}" style="display:none" loop />
      </view>
    </view>
  </view>
  <view class="atd-bottom-bt"></view>
</view>