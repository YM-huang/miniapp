/* horizontal steps style */
.atd-hor-steps {
  padding: 20px 50px 10px 50px;
  background-color: #fff;
  overflow: hidden;
  white-space: nowrap;
}
.atd-hor-step {
  display: inline-block;
  white-space: normal;
  text-align: center;
  vertical-align: top;
}
.atd-hor-step-line {
  position: relative;
  margin: 6px 0;
  height: 2px;
  background-color: #ccc;
}
.atd-hor-step-line.is-active {
  background-color: #108ee9;
}
.atd-hor-step-line.is-last {
  background-color: transparent;
}
.atd-hor-step-icon {
  position: absolute;
  top: 50%;
  left: 0;
  width: 10px;
  height: 10px;
  transform: translate(-50%, -50%);
  border-radius: 999px;
  background-color: #ccc;
}
.atd-hor-step-icon.is-active {
  background-color: #108ee9;
}
.atd-hor-step-text {
  margin-top: 20px;
  padding: 0 5px;
  max-width: 90px;
  transform: translateX(-50%);
}
.atd-hor-step-title {
  font-size: 12px;
  color: #333;
}
.atd-hor-step-description {
  margin-top: 6px;
  font-size: 12px;
  color: #999;
}
/* vertical steps style */
.atd-vertical-steps {
  padding: 20px 30px 0 30px;
  background-color: #fff;
}
.atd-vertical-step {
  display: flex;
}
.atd-vertical-step-left {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 24px;
  margin-right: 20px;
}
/* line 包含 top 和 bottom 两块， 整体下移20px, 保证和原点无缝衔接 */
.atd-vertical-step-line {
  position: relative;
  top: 10px;
  width: 2px;
  background-color: #ccc;
}
.atd-vertical-step-line-top {
  flex: 1;
}
/* 60px 是 atd-vertical-step-text的margin-bottom的40px加上line的下移20px，保证line-top底部和右侧文字底布对齐 */
.atd-vertical-step-line-bottom {
  height: 30px;
  width: 2px;
  background-color: #ccc;
}
.atd-vertical-step-line.is-active {
  background-color: #ccc;
}
.atd-vertical-step-icon {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 999px;
}
.atd-vertical-step-icon.is-normal {
  top: 5px;
  background-color: #ccc;
  width: 14px;
  height: 14px;
}
.atd-vertical-step-icon.is-active,
.atd-vertical-step-icon.is-fail {
  width: 14px;
  height: 14px;
  background-color: #fff;
}
.atd-vertical-step-right {
  flex: 1;
  margin-bottom: 20px;
  padding-top: 7rpx;
}
.atd-vertical-step-title {
  margin-bottom: 4px;
  font-size: 14px;
  color: #333;
}
.atd-vertical-step-title.is-active {
  color: #108ee9;
}
.atd-vertical-step-title.is-fail {
  color: #F4333C;
}
.atd-vertical-step-description {
  font-size: 14px;
  color: #888;
  float: right;
  display: inline-block;
}
.atd-vertical-placeholder {
  height: 20px;
}
.atd-vertical-placeholder-line {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  height: 100%;
  width: 2px;
  background-color: #ccc;
}
.atd-vertical-step-icon .image-icon {
  width: 28rpx;
  height: 28rpx;
}
.atd-list-arrow {
  display: inline-block;
  width: 10px;
  height: 10px;
  margin-left: 8px;
  background-image: url('https://gw.alipayobjects.com/zos/rmsportal/nGMpTwTjtKMbOeeQIucS.png');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: 50% 50%;
}
.atd-vertical-step-isfar {
  display: inline-block;
  font-size: 24rpx;
  color: #0f8ee9;
  padding-left: 20rpx;
}
.atd-vertical-step-name {
  display: inline-block;
}
.atd-vertical-step-voice {
  width: 80rpx;
  height: 100%;
  display: inline-block;
  float: right;
  border: 1px solid #333;
  border-radius: 20rpx;
  text-align: center;
  margin-right: 40rpx;
}
.atd-vertical-step-icon.is-active {
  top: 5px;
  background: #108ee9;
  width: 14px;
  height: 14px;
}
.atd-vertical-step-voice.active {
  color: white;
  background: skyblue;
}
.atd-vertical-step-voice.unactive {
  color: skyblue;
  background: white;
}
.atd-bottom-bt {
  width: 100%;
  height: 40rpx;
}
