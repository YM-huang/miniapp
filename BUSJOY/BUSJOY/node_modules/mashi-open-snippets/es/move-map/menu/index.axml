<view class="atd-menu-box">
  <view class="menu-box-commen" onTap="onShowTypePopover">
    <view class="menu-class-phote"></view>
    <view class="menu-class-text">筛选</view>
  </view>
  <popover className="popover" position="rightTop" show="{{typeShow}}" showMask="{{false}}" onMaskClick="onMaskClick">
    <view slot="items" class="item-list">
      <block a:for="{{typeData}}">
        <popover-item>
          <view onTap="onTypeClick" data-type="{{item}}">{{item.label}}</view>
        </popover-item>
      </block>
    </view>
  </popover>
  <view a:if="{{selectMarkers.length}}" class="menu-box-commen" onTap="onCancel">
    <view class="type-cancel"></view>
    <view class="menu-class-text">取消</view>
  </view>
</view>