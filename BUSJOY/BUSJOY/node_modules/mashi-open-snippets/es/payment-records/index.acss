.payment-records-wraper {
  display: flex;
  flex-direction: column;
  border-radius: 16rpx;
  background: white;
}
.payment-records-wraper .payment-records-title-out {
  display: flex;
  flex-direction: column;
}
.payment-records-wraper .payment-records-title-out .payment-records-title {
  display: flex;
  margin: 28rpx 32rpx;
  font-family: Helvetica;
  font-size: 30rpx;
  color: #000000;
  letter-spacing: 0.51rpx;
  text-align: center;
}
.payment-records-wraper .payment-records-payment-col-out {
  display: flex;
  flex-direction: column;
  min-height: 148rpx;
  padding: 0 23rpx 0 24rpx;
}
.payment-records-wraper .payment-records-payment-col-out .payment-records-payment-col {
  display: flex;
  align-items: center;
  padding: 35rpx 0;
}
.payment-records-wraper .payment-records-payment-col-out .payment-records-payment-col .payment-records-icon {
  width: 64rpx;
  height: 64rpx;
  background-size: contain;
}
.payment-records-wraper .payment-records-payment-col-out .payment-records-payment-col .payment-records-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}
.payment-records-wraper .payment-records-payment-col-out .payment-records-payment-col .payment-records-content .payment-records-main-title {
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #333333;
  text-align: left;
  margin-bottom: 8rpx;
}
.payment-records-wraper .payment-records-payment-col-out .payment-records-payment-col .payment-records-content .payment-records-sub-title {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 0;
  text-align: left;
}
.payment-records-wraper .payment-records-payment-col-out .payment-records-payment-col .payment-records-arrow {
  margin-right: 13.09rpx;
}
.payment-records-wraper .payment-records-payment-col-out .payment-records-payment-col .payment-records-arrow:after {
  content: '';
  display: inline-block;
  width: 13.89rpx;
  height: 13.89rpx;
  border-top: 1px solid #CCCCCC;
  border-right: 1px solid #CCCCCC;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}
.payment-records-wraper .payment-records-payment-col-out .payment-records-payment-col .payment-records-extra {
  max-width: 180rpx;
  overflow: hidden;
  white-space: normal;
  word-wrap: break-word;
  display: flex;
  flex-direction: column;
}
.payment-records-wraper .payment-records-payment-col-out .payment-records-payment-col .payment-records-extra .payment-records-extra-value {
  font-family: Helvetica;
  font-size: 36rpx;
  color: #333333;
  letter-spacing: 0.75px;
  text-align: right;
}
.payment-records-wraper .payment-records-payment-col-out .payment-records-payment-col .payment-records-extra .payment-records-extra-description {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 0.54px;
  text-align: right;
}
.payment-records-wraper .payment-records-fix-1px {
  position: relative;
  border: none;
}
.payment-records-wraper .payment-records-fix-1px:after {
  content: '';
  position: absolute;
  bottom: 0;
  background: #e5e5e5;
  width: 100%;
  height: 1px;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}
