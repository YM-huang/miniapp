<!-- 生活缴费-历史记录 -->
<view class="payment-records-wraper {{containerClassName}}">
    <view class="payment-records-title-out" a:if="{{data.title}}">
        <view class="payment-records-title">{{data.title}}</view>
        <view class="payment-records-fix-1px"></view>
    </view>
    <view class="payment-records-payment-col-out" a:for="{{data.list}}" a:key="index">
        <view class="payment-records-fix-1px" a:if="{{index!==0}}"></view>
        <view class="payment-records-payment-col">
            <image class="payment-records-icon" src="{{item.icon}}" mode="" />
            <view class="payment-records-content">
                <view class="payment-records-main-title">{{item.mainTitle}}</view>
                <view class="payment-records-sub-title">{{item.subTitle}}</view>
            </view>
            <view class="payment-records-extra" a:if="{{item.extra}}">
                <view class="payment-records-extra-value">{{item.extra.value}}</view>
                <view class="payment-records-extra-description">{{item.extra.description}}</view>
            </view>
            <view a:else class="payment-records-arrow"></view>
        </view>
    </view>
</view>