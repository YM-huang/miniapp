<view class="am-hor-steps {{containerClassName}}" >
  <view class="am-hor-step" a:for="{{items}}" style="{{width: 100 / (items.length - 1) + '%'}}">
    <view class="am-hor-step-line {{index < activeIndex - 1 ? 'is-active' : ''}} {{index >= items.length - 1 ? 'is-last' : ''}}">
      <image 
        class="am-hor-step-icon-img {{index <= activeIndex - 1 ? 'is-active' : ''}}"
        src="https://gw.alipayobjects.com/mdn/rms_fd9cbf/afts/img/A*OzrsS6LebM8AAAAAAAAAAABkARQnAQ"
        a:if="{{index <= activeIndex - 1}}"
      >
      </image>
      <view 
        class="am-hor-step-icon {{index <= activeIndex - 1 ? 'is-active' : ''}}"
        a:else
      >
        {{index+1}}
      </view>
     <view class="am-hor-step-line-extra"
        a:if="{{index <= activeIndex - 1 && index != items.length-1}}">
    </view>
    </view>
    <view class="am-hor-step-text">
      <view class="am-hor-step-title">
        <text>{{item.title}}</text>
      </view>
      <view class="am-hor-step-description">
        <text>{{item.description}}</text>
      </view>
    </view>
  </view>
</view>