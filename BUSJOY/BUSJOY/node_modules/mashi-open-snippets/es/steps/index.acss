.am-hor-steps {
  padding: 20px 56px;
  overflow: hidden;
  white-space: nowrap;
}
.am-hor-step {
  display: inline-block;
  white-space: normal;
  text-align: center;
  vertical-align: top;
  line-height: normal;
}
.am-hor-step-line {
  position: relative;
  margin: 6px 0;
  height: 3px;
  background-color: rgba(16, 110, 242, 0.1);
}
.am-hor-step-line-extra {
  position: absolute;
  width: 42%;
  left: 20rpx;
  height: 3px;
  background-color: #116ff4;
  border-radius: 5rpx 5rpx 5rpx 5rpx;
}
.am-hor-step-line.is-active {
  background-color: #116ff4;
}
.am-hor-step-line.is-last {
  background-color: transparent;
}
.am-hor-step-icon {
  position: absolute;
  top: 50%;
  left: 0;
  width: 44rpx;
  height: 44rpx;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  background-color: white;
  box-shadow: 0 4px 8px 0 rgba(22, 119, 255, 0.12);
}
.am-hor-step-icon-img {
  position: absolute;
  top: 50%;
  left: 0;
  width: 74rpx;
  height: 74rpx;
  transform: translate(-50%, -50%);
  border-radius: 50%;
}
.am-hor-step-aline {
  position: absolute;
  top: 50%;
  left: 70rpx;
  width: 100rpx;
  height: 6rpx;
  transform: translate(-50%, -50%);
  background-color: #116ff4;
}
.am-hor-step-icon.is-active {
  background-color: #116ff4;
}
.am-hor-step-text {
  margin-top: 12px;
  padding: 0 5px;
  max-width: 90px;
  transform: translateX(-50%);
}
.am-hor-step-title {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  line-height: 38rpx;
  margin-top: 44rpx;
}
.am-hor-step-description {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999999;
  text-align: center;
  line-height: 38rpx;
  margin-top: 8rpx;
}
