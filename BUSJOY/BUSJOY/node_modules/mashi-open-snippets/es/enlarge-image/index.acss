.atd-enlarge-image .preview-model-show {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
}
.atd-enlarge-image .preview-model-hide {
  display: none;
}
.atd-enlarge-image .preview-model-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.75);
}
.atd-enlarge-image .preview-model-document {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.atd-enlarge-image .preview-model-enlarge-image {
  width: 100vw;
}
.atd-enlarge-image .preview-model-content {
  position: relative;
}
.atd-enlarge-image .preview-modal-close {
  width: 30px;
  height: 30px;
  position: absolute;
  bottom: -65px;
  right: calc(50% - 15px);
}
.atd-enlarge-image .preview-modal-close:before {
  content: '';
  position: absolute;
  top: -38px;
  left: calc(50% - 0.5px);
  background: #ddd;
  width: 1px;
  height: 38px;
}
