.value-wraper {
  text-align: center;
}
.value-wraper .title-wraper {
  font-size: 32rpx;
  font-weight: bold;
}
.value-wraper .title-wraper .line {
  display: inline-block;
  width: 24rpx;
  height: 1rpx;
  background-color: #D8D8D8;
  vertical-align: middle;
}
.value-wraper .title-wraper .title {
  display: inline-block;
  margin: 0 12rpx;
  color: #3A3A3A;
}
.value-wraper .item {
  display: inline-block;
  width: 33.3%;
}
.value-wraper .item .icon {
  width: 48rpx;
  height: 48rpx;
  background-size: contain;
  margin-bottom: 6rpx;
}
.value-wraper .item .label {
  margin-bottom: 32rpx;
  font-size: 24rpx;
  color: #4C4C4C;
}
