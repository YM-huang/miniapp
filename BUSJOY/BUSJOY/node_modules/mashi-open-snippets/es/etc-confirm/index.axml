<!-- etc-确认窗 -->
<view class="etc-confirm-wraper {{containerClassName}}" a:if="{{ifShow}}">
    <view class="etc-confirm-content">
        <view class="etc-confirm-close" onTap="handleClose"></view>
        <text class="etc-confirm-title" number-of-lines="1">{{title}}</text>
        <text class="etc-confirm-subtitle" number-of-lines="2">{{subTitle}}</text>
        <view class="etc-confirm-buttons">
            <button onTap="handleCancel">{{cancelButtonText}}</button>
            <button onTap="handleConfirm">{{confirmButtonText}}</button>
        </view>
    </view>
</view>