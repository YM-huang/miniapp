<!-- etc-新手引导 -->
<view class="etc-novice-guide-wraper {{containerClassName}}">
    <text class="etc-novice-guide-title" number-of-lines="1">{{currentItem.title}}</text>
    <view class="etc-novice-guide-subtitle-out">
        <text class="etc-novice-guide-subtitle" number-of-lines="2">{{currentItem.subTitle}}</text>
    </view>
    <view class="etc-novice-guide-steps-row">
        <view onTap="onTapPre">
            <image src="https://gw.alipayobjects.com/mdn/rms_d2bbcd/afts/img/A*XW-GQZRonhoAAAAAAAAAAABkARQnAQ" />
            {{currentItem.preText}}
        </view>
        <view>{{currentItem.midText}}</view>
        <view onTap="onTapNext">
            {{currentItem.nextText}}
            <image src="https://gw.alipayobjects.com/mdn/rms_d2bbcd/afts/img/A*W_5-TJsWPUAAAAAAAAAAAABkARQnAQ" />
        </view>
    </view>
    <view class="etc-novice-guide-bottom">
        <view a:for="{{currentItem.bottomText}}">
            <view class="etc-novice-guide-fix-1px" a:if="{{index!==0}}"></view>
            <view class="etc-novice-guide-bottom-text" data-content="{{item}}" data-index="{{index}}" onTap="onBottomText">{{item}}</view>
        </view>
    </view>
</view>