.etc-novice-guide-wraper {
  display: flex;
  flex-direction: column;
  height: 445rpx;
  box-sizing: border-box;
  background: white;
  padding: 64rpx 37rpx 0 37rpx;
}
.etc-novice-guide-wraper .etc-novice-guide-title {
  font-family: PingFangSC-Medium;
  font-size: 54rpx;
  color: #333333;
  margin-bottom: 20rpx;
}
.etc-novice-guide-wraper .etc-novice-guide-subtitle-out {
  height: 124rpx;
}
.etc-novice-guide-wraper .etc-novice-guide-subtitle-out .etc-novice-guide-subtitle {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #333333;
}
.etc-novice-guide-wraper .etc-novice-guide-steps-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 67rpx;
}
.etc-novice-guide-wraper .etc-novice-guide-steps-row image {
  width: 16rpx;
  height: 26rpx;
}
.etc-novice-guide-wraper .etc-novice-guide-steps-row :first-child {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #1671ff;
}
.etc-novice-guide-wraper .etc-novice-guide-steps-row :first-child image {
  margin-right: 12rpx;
}
.etc-novice-guide-wraper .etc-novice-guide-steps-row :nth-child(2) {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #333333;
}
.etc-novice-guide-wraper .etc-novice-guide-steps-row :last-child {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #1671ff;
}
.etc-novice-guide-wraper .etc-novice-guide-steps-row :last-child image {
  margin-left: 12rpx;
}
.etc-novice-guide-wraper .etc-novice-guide-bottom {
  display: flex;
  justify-content: center;
}
.etc-novice-guide-wraper .etc-novice-guide-bottom > view {
  display: flex;
}
.etc-novice-guide-wraper .etc-novice-guide-bottom .etc-novice-guide-bottom-text {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #1677FF;
  letter-spacing: 0.58rpx;
}
.etc-novice-guide-wraper .etc-novice-guide-fix-1px {
  position: relative;
  border: none;
  height: 100%;
  margin: 0 27.5rpx;
}
.etc-novice-guide-wraper .etc-novice-guide-fix-1px:after {
  content: '';
  position: absolute;
  bottom: 0;
  background: #e5e5e5;
  width: 1px;
  height: 100%;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}
