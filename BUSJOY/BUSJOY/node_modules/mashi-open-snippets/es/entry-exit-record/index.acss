.entry-exit-record-wraper {
  display: flex;
  flex-direction: column;
  border-radius: 16rpx;
  min-height: 340rpx;
  box-sizing: border-box;
  background-image: radial-gradient(circle at 22rpx 22rpx, transparent 0%, transparent 22rpx, white 22rpx, white 100%);
  background-position: -22rpx 62rpx;
  background-size: 100% 369rpx;
}
.entry-exit-record-wraper .entry-exit-record-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 37rpx 25rpx 24rpx;
}
.entry-exit-record-wraper .entry-exit-record-top .entry-exit-record-left {
  display: flex;
  align-items: center;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0.63rpx;
  text-align: right;
}
.entry-exit-record-wraper .entry-exit-record-top .entry-exit-record-left image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}
.entry-exit-record-wraper .entry-exit-record-top .entry-exit-record-right {
  font-family: Helvetica;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0.63rpx;
  text-align: right;
}
.entry-exit-record-wraper .entry-exit-record-dashed {
  height: 1px;
  border-bottom: 1px dotted #D8D8D8;
  margin: 0 32rpx;
}
.entry-exit-record-wraper .entry-exit-record-content {
  display: flex;
  flex-direction: column;
}
.entry-exit-record-wraper .entry-exit-record-content > view {
  display: flex;
  justify-content: space-between;
  padding: 17rpx 26rpx 12rpx 26rpx;
}
.entry-exit-record-wraper .entry-exit-record-content > view :first-child {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
}
.entry-exit-record-wraper .entry-exit-record-content > view :last-child {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: right;
  max-width: 520rpx;
  word-wrap: break-word;
}
.entry-exit-record-wraper .entry-exit-record-content > view:last-child {
  padding-bottom: 24rpx;
}
