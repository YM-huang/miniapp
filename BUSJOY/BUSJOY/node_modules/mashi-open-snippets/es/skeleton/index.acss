.skeleton {
  display: flex;
  padding: 16px;
}
.skeleton-avatar {
  flex-shrink: 0;
  background: #f2f3f5;
  margin-right: 8px;
}
.skeleton-avatar.round {
  border-radius: 50%;
}
.skeleton-content {
  width: 100%;
}
.skeleton-title {
  background-color: #f2f3f5;
  height: 16px;
}
.skeleton-title + .skeleton-rows {
  margin-top: 16px;
}
.skeleton-row-item {
  background-color: #f2f3f5;
  height: 16px;
}
.skeleton-row-item:not(:first-child) {
  margin-top: 16px;
}
.skeleton.animate {
  animation: skeleton-blink 1.2s ease-in-out infinite;
}
@keyframes skeleton-blink {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
  100% {
    opacity: 1;
  }
}
