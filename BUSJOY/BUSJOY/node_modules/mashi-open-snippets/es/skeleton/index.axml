<view>
  <view 
    a:if="{{ loading }}" 
    class="skeleton {{ animate ? 'animate' : '' }}">
    <view
      a:if="{{ showAvatar }}"
      class="skeleton-avatar {{ avatarShape }}"
      style="width: {{ avatarSize}}; height: {{ avatarSize }}"
    >
    </view>
    <view 
      class="skeleton-content"
    >
      <view 
        a:if="{{ showTitle }}" 
        class="skeleton-title" 
        style="width: {{ titleWidth }}"
      >
      </view>
      <view 
        class="skeleton-rows"
      >
        <view
          class="skeleton-row-item"
          a:for="{{ rowList }}"
          a:for-index="index"
          style="width:{{ item.width }}"
        ></view>
      </view>
    </view>
  </view>
  <view a:else>
    <slot></slot>
  </view>
</view>