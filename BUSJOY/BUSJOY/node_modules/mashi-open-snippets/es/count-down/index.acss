.uni-countdown {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 2rpx 0;
}
.uni-countdown__splitor {
  display: flex;
  justify-content: center;
  line-height: 48rpx;
  padding: 5rpx;
  font-size: 14px;
  color: skyblue;
}
.uni-countdown__number {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 52rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin: 5rpx;
  text-align: center;
  font-size: 14px;
  color: skyblue;
}
