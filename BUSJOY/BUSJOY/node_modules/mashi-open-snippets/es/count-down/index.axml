<view class="uni-countdown">
  <text 
    a:if="{{ showDay }}" 
    style="borderColor: {{ borderColor }}; color: {{ color }}; backgroundColor: {{ backgroundColor }}" 
    class="uni-countdown__number"
  >
    {{ d }}
  </text>
  <text 
    a:if="{{ showDay }}" 
    style="color: {{ splitorColor }}"
    class="uni-countdown__splitor"
  >
    天
  </text>
  <text 
    a:if="{{showHour}}"
    style="borderColor: {{ borderColor }}; color: {{ color }}; backgroundColor: {{ backgroundColor }}"
    class="uni-countdown__number"
  >
    {{ h }}
  </text>
  <text 
    a:if="{{showHour}}"
    style="color: {{ splitorColor }}"
    class="uni-countdown__splitor"
  >
    {{ showColon ? ':' : '时' }}
  </text>
  <text 
    a:if="{{showMinute}}"
    style="borderColor: {{ borderColor }}; color: {{ color }}; backgroundColor: {{ backgroundColor }}" 
    class="uni-countdown__number"
  >
    {{ i }}
  </text>
  <text
    a:if="{{showMinute}}"
    style="color: {{ splitorColor }}" 
    class="uni-countdown__splitor"
  >
    {{ showColon ? ':' : '分' }}
  </text>
  <text 
    style="borderColor: {{ borderColor }}; color: {{ color }}; backgroundColor: {{ backgroundColor }}" 
    class="uni-countdown__number"
  >
    {{ s }}
  </text>
  <text 
    a:if="{{ !showColon }}" 
    style="color: {{ splitorColor }}" 
    class="uni-countdown__splitor"
  >
    秒
  </text>
</view>