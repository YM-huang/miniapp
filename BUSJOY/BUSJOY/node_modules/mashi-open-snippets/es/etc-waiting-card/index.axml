<!-- etc-等待卡片 -->
<view class="etc-waiting-card-wraper {{containerClassName}}">
    <text class="etc-waiting-card-title" number-of-lines="1">{{data.title}}</text>
    <view class="etc-waiting-card-subtitle-out">
        <text class="etc-waiting-card-subtitle" number-of-lines="2">请稍等，预计 {{count}} 秒完成</text>
    </view>
    <view class="etc-waiting-card-info-out">
        <image a:if="{{data.iconUrl}}" style="width:{{data.iconWidth}};height:{{data.iconHeight}};" src="{{data.iconUrl}}" mode="scaleToFill" />
        <view>
            <text number-of-lines="3">{{data.info}}</text>
        </view>
    </text>
</view>