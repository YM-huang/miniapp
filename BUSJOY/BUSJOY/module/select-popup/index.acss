page {
  flex-direction: column;
}

.popup-show {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 901;
}

.popup-show .popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.65);
  z-index: 902;
}

.popup-show .popup-modal {
  background-color: #fff;
  border-radius: 2px;
  width: 480rpx;
  position: absolute;
  left: 84rpx;
  top: 200rpx;
  padding: 80rpx 50rpx 50rpx 50rpx;
  z-index: 902;
}

.popup-show .popup-modal .popup-title {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  padding-bottom: 85rpx;
  font-family: PingFangSC-Medium;
  letter-spacing: 0.58rpx;
}

.popup-show .popup-modal .petrol-wrapper {
  padding-bottom: 59rpx;
}

.popup-show .popup-modal .petrol-wrapper .petrol-item-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.popup-show .popup-modal .diesel-wrapper .petrol-item-wrapper {
  display: flex;
  align-items: center;
  justify-content: start;
}

.popup-show .popup-modal .title {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  padding-bottom: 21rpx;
  font-family: PingFangSC-Medium;
  letter-spacing: 0.52rpx;
  text-align: left;
}

.popup-show .popup-modal .oil-item {
  width: 139rpx;
  height: 105rpx;
  border: 2rpx solid #eee;
  border-radius: 4rpx;
  color: #333;
  font-size: 48rpx;
  text-align: center;
  line-height: 105rpx;
  font-family: PingFangSC-Medium;
}

.popup-show .popup-modal .oil-item-selected {
  border: 2rpx solid #108ee9;
  background: url(data:image/png;base64,) right bottom no-repeat;
  background-size: 40rpx 40rpx;
}

.popup-hide {
  display: none;
}
