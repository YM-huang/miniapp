.evaluate-wraper .evaluate-item {
  height: 273rpx;
  padding: 40rpx 0 47rpx;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1rpx solid #eee;
}
.evaluate-wraper .evaluate-item:nth-of-type(1) {
  padding-top: 0rpx;
}
.evaluate-wraper .evaluate-item:last-of-type {
  padding-bottom: 0;
  border-bottom: none;
}
.evaluate-wraper .evaluate-item .info-wraper {
  display: flex;
  justify-content: space-between;
  margin-bottom: 28rpx;
}
.evaluate-wraper .evaluate-item .info-wraper .user-info .avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 16rpx;
}
.evaluate-wraper .evaluate-item .info-wraper .user-info .person {
  display: inline-block;
  text-align: left;
  vertical-align: middle;
}
.evaluate-wraper .evaluate-item .info-wraper .user-info .person .name {
  font-size: 26rpx;
  margin-bottom: 8rpx;
}
.evaluate-wraper .evaluate-item .info-wraper .user-info .person .time {
  font-size: 20rpx;
  color: #999999;
}
.evaluate-wraper .evaluate-item .info-wraper .count-wraper .icon-wraper {
  display: inline-block;
  font-size: 24rpx;
  color: #999;
}
.evaluate-wraper .evaluate-item .info-wraper .count-wraper .icon-wraper .number {
  vertical-align: middle;
  margin-left: 6rpx;
}
.evaluate-wraper .evaluate-item .info-wraper .count-wraper .icon-wraper.up {
  margin-right: 24rpx;
}
.evaluate-wraper .evaluate-item .info-wraper .count-wraper .icon-wraper.up .icon {
  width: 24rpx;
  height: 24rpx;
  background-size: cover;
  vertical-align: middle;
}
.evaluate-wraper .evaluate-item .info-wraper .count-wraper .icon-wraper.count .icon {
  width: 25rpx;
  height: 23rpx;
  background-size: cover;
  vertical-align: middle;
}
.evaluate-wraper .evaluate-item .comment-info {
  text-align: left;
}
.evaluate-wraper .evaluate-item .comment-info .text {
  width: 394rpx;
  display: inline-block;
  vertical-align: top;
  margin-right: 28rpx;
}
.evaluate-wraper .evaluate-item .comment-info .text .content {
  display: -webkit-box;
  overflow: hidden;
  font-size: 24rpx;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  color: #A2A2A2;
  line-height: 34rpx;
}
.evaluate-wraper .evaluate-item .comment-info .image {
  width: 216rpx;
  height: 138rpx;
}
.evaluate-wraper .evaluate-item .comment-info.noImage .text {
  width: 100%;
  margin-right: 0;
}
.evaluate-wraper .evaluate-item .comment-info.noImage .text .content {
  display: -webkit-box;
  overflow: hidden;
  font-size: 24rpx;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.evaluate-wraper .evaluate-item .comment-info.noImage .image {
  display: none;
}
