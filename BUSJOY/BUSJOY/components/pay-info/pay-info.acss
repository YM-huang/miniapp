.pay-info-wraper {
  text-align: center;
  color: #FFF;
  font-size: 36rpx;
}
.pay-info-wraper .status-icon {
  margin-bottom: 11rpx;
}
.pay-info-wraper .status-icon .icon {
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
  margin-right: 12rpx;
}
.pay-info-wraper .status-icon .text {
  vertical-align: middle;
  font-weight: 500;
}
.pay-info-wraper .content-wraper {
  margin-bottom: 13rpx;
  color: #FFF;
  font-size: 54rpx;
}
.pay-info-wraper .content-wraper.price-wraper .RMB {
  font-size: 36rpx;
}
.pay-info-wraper .content-wraper.price-wraper .price {
  font-family: AlipayNumber-Regular;
  font-size: 74rpx;
  line-height: 94rpx;
}
.pay-info-wraper .content-wraper.station-wraper {
  line-height: 75rpx;
  margin-top: 21rpx;
}
.pay-info-wraper .content-wraper.bus-wraper .busNumber {
  font-family: AlipayNumber-Regular;
  font-size: 72rpx;
  vertical-align: text-bottom;
  margin-right: 7.5rpx;
}
.pay-info-wraper .pay-status-des {
  font-size: 26rpx;
}
.pay-info-wraper .pay-status-des .reduced {
  color: #FFF087;
  margin-right: 5rpx;
}
.pay-info-wraper .pay-status-des .delay {
  color: rgba(255, 255, 255, 0.6);
}
.pay-info-wraper .pay-status-des .remark {
  color: rgba(255, 255, 255, 0.7);
}
.pay-info-wraper .pay-status-des:last-child {
  margin-bottom: 39rpx;
}
.pay-info-wraper .energy-wraper {
  margin-top: 12rpx;
  margin-bottom: 19rpx;
}
.pay-info-wraper .sub-arrow-wraper {
  height: 32rpx;
  padding-top: 7rpx;
  box-sizing: border-box;
}
.pay-info-wraper .sub-arrow-wraper .sub-arrow {
  margin: 0 auto;
  background: url('https://gw.alipayobjects.com/mdn/rms_ec9563/afts/img/A*mx6vTb1hpFoAAAAAAAAAAABkARQnAQ');
  height: 10rpx;
  width: 21rpx;
  background-size: 100% 100%;
}
.pay-info-wraper .sub-arrow-wraper .sub-arrow.spread {
  background: url('https://gw.alipayobjects.com/mdn/rms_ec9563/afts/img/A*BhtqQoms64sAAAAAAAAAAABkARQnAQ');
  background-size: 100% 100%;
  margin: 0 auto;
}
.pay-info-wraper .station-info {
  padding-top: 46rpx;
}
.pay-info-wraper .station-info .item {
  padding: 0 24rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
}
.pay-info-wraper .station-info .item text {
  line-height: 37rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}
.pay-info-wraper .station-info .item:last-child {
  margin-bottom: 0;
}
